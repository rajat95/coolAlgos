#include <cstdio>
#include <iostream>
#include <cstring>
#include <algorithm>
using namespace std;
unsigned long long arr[100004];
unsigned long long merge(unsigned long long start,unsigned long long mid, unsigned long long end)
{
	unsigned long long sum = 0;
	unsigned long long temp[end-start+1];
	unsigned long long k = 0,j,i;
	i = start;
	j = mid+1;
	while(i<=mid&&j<=end)
	{
		if(arr[i]<arr[j])
		{
			temp[k] = arr[i];
			sum = sum+arr[i]*(unsigned long long)(end-j+1);
			k++;
			i++;
		}
		else if(arr[i]>=arr[j])
		{
			temp[k] = arr[j];
			k++;
			j++;
		}
		
	}
	while(i<=mid)
	{
	temp[k++] = arr[i++];
	}
	while(j<=end)
	{
		temp[k++] = arr[j++];
	}
	for(k = 0;k<=end-start;k++)
	{
		arr[start+k]= temp[k];
	}
	return sum;
	
}
unsigned long long merge_sort(unsigned long long start,unsigned long long end)
{
	unsigned long long sum = 0;
	unsigned long long mid = (start+end)/2;
	if(start<end)
	{
	
	 sum =  merge_sort(mid+1,end);
	 sum = sum+merge_sort(start,mid);
	 sum = sum+ merge(start,mid,end);
	}
	return sum;
	
}
int main(void)
{
	unsigned long long t,i,j,n;
	unsigned long long sum;
	scanf("%llu",&t);
	while(t--)
	{
		sum = 0;
		scanf("%llu",&n);
		for(i = 0;i<n;i++)
		{
			scanf("%llu",&arr[i]);
		}
		sum = merge_sort(0,n-1);
		/*cout<<sum<<endl;*/
		printf("%llu\n",sum);
	}
}
